+        if spoke.mainWidgetName not in ["storageWindow", "passwordWindow", "sourceWindow", "softwareWindow"]:
             spoke.selector.set_sensitive(False)
         else:
             spoke.selector.set_sensitive(spoke.sensitive and spoke.ready)
